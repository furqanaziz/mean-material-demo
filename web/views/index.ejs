<html lang="en" ng-app="webApp">
  <head>
    <title>Telenor Assignment | Muhammad Furqan Aziz</title>
    <base href="/">
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body layout="row" ng-controller="AppCtrl">
  <md-sidenav layout="column" class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="$mdMedia('gt-md')">
    <md-toolbar class="md-hue-2">
      <div class="md-toolbar-tools">
        <h3> Telenor Assignment </h3>
      </div>
    </md-toolbar>
    <md-list>
      <md-item ng-repeat="item in menu" class="side-nav">
        <a href="{{item.link}}">
          <md-item-content md-ink-ripple layout="row" layout-align="start center">
            <div class="inset">
              <ng-md-icon icon="{{item.icon}}"></ng-md-icon>
            </div>
            <div class="inset">{{item.title}}
            </div>
          </md-item-content>
        </a>
      </md-item>
      <md-divider></md-divider>
    </md-list>
  </md-sidenav>
  <div layout="column" class="relative" layout-fill role="main">
    <a href="#/users/add">
      <md-button class="md-fab md-fab-bottom-right" aria-label="Add">
        <ng-md-icon icon="add"></ng-md-icon>
      </md-button>
    </a>
    <md-toolbar ng-show="!showSearch">
      <div class="md-toolbar-tools">
        <md-button ng-click="toggleSidenav('left')" hide-gt-md aria-label="Menu">
          <ng-md-icon icon="menu"></ng-md-icon>
        </md-button>
        <h3> Users </h3>
        <span flex></span>
        <md-button aria-label="Search" ng-click="showSearch = !showSearch">
          <ng-md-icon icon="search"></ng-md-icon>
        </md-button>
      </div>
    </md-toolbar>
    <md-toolbar class="md-hue-1" ng-show="showSearch">
      <div class="md-toolbar-tools">
        <md-button ng-click="showSearch = !showSearch;search='';" aria-label="Back">
          <ng-md-icon icon="arrow_back"></ng-md-icon>
        </md-button>
        <h3 flex="10" ng-click="showSearch = !showSearch;search='';" > Back </h3>
        <md-input-container md-theme="input" flex>
          <label>&nbsp;</label>
          <input ng-model="search" placeholder="Enter Search Text">
        </md-input-container>
        <md-button aria-label="Search" ng-click="showSearch = !showSearch">
          <ng-md-icon icon="search"></ng-md-icon>
        </md-button>
      </div>
    </md-toolbar>
    <md-content flex md-scroll-y>
      <ui-view layout="column" layout-fill layout-padding>
        <div class="inset" hide-sm></div>
        <div aria-labelledby="tab1" layout="row" layout-align="center center">
          <md-card flex-gt-sm="90" flex-gt-md="80" ng-view></md-card>
        </div>
      </ui-view>
    </md-content>
  </div>
  <!-- Angular Material Dependencies -->
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-route.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>

  <script src="//ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.js"></script>
  <script src="//cdn.jsdelivr.net/angular-material-icons/0.4.0/angular-material-icons.min.js"></script> 
  <script src="//cdn.jsdelivr.net/lodash/4.13.1/lodash.min.js"></script> 

  <script src="/js/libs/moment.min.js"></script>
  <script src="/js/helpers/apiHelper.js"></script>
  <script src="/js/helpers/dateHelper.js"></script>
  <script src="/js/controllers/app.js"></script>
  <script src="/js/controllers/users.js"></script>
  <script src="/js/routes.js"></script>
  <script src="/js/theme.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>